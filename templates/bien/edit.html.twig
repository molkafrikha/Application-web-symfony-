{% extends "fix.html.twig" %}
{% block content %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div class="container-fluid">
        <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Modifier un offre de transport du bien</h3></center>
        <div class="row justify-content-center" style="margin-left:150px;margin-right:150px">
            <div class="col-lg-12" style="margin-bottom: 50px">
                <div class="card" >
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" style="">
                                <div class="form-group row">

                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.lieud) }} <span class="text-danger">*</span>
                                    </label>

                                    <div class="col-lg-6">
                                        {{ form_widget(form.lieud, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.lieud) }}
                                    </div>
                                </div>
                                <div class="form-group row">

                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.lieua) }} <span class="text-danger">*</span>
                                    </label>

                                    <div class="col-lg-6">
                                        {{ form_widget(form.lieua, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.lieua) }}
                                    </div>




                                    <div class="col-lg-6" style="margin-top:-5px">
                                        <label style="margin-top:20px" class="col-lg-4 col-form-label">{{ form_label(form.dated) }}<span class="text-danger">*</span></label>
                                        <div class="col-lg-6">
                                            {{ form_widget(form.dated, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.dated) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-6" style="margin-top:-5px">
                                        <label style="margin-top:20px" class="col-lg-4 col-form-label">{{ form_label(form.num) }}<span class="text-danger">*</span></label>
                                        <div class="col-lg-6">
                                            {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.num) }}
                                        </div>
                                    </div>

                                    <div class="col-lg-6" style="margin-top:-5px">
                                        <label style="margin-top:20px" class="col-lg-4 col-form-label">{{ form_label(form.iduser) }}<span class="text-danger">*</span></label>
                                        <div class="col-lg-6">
                                            {{ form_widget(form.iduser, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.iduser) }}
                                        </div>
                                    </div>



                                    {{ form_rest(form) }}
                                    <div class="form-group row">
                                        <div class="col-lg-8 ml-auto">
                                            <button type="submit" class="btn btn-primary">Ajouter</button>
                                        </div>
                                    </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock %}