{% extends "fixadmin.html.twig" %}
{% block content %}
    <div class="container-fluid">
        <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Détails sur cet événement</h3></center>
        <div class="row">
            <!--<a href="">generate pdf</a>-->
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-center" id="gold" style="color:goldenrod" hidden>
                        <span class="display-5"><i class="icon-diamond gradient-4-text"></i></span>
                        <h5>Ce sponsor est prviligé</h5>
                    </div>
                    <div class="card-body">
                        <ul>
                        <h5 style="color: #76838f;"><li>Le Sponsor : {{ sponsor.sponsor }}</li><br>
                               <li> L'adresse : {{ sponsor.adresse}}</li><br>
                            <li>L'email' :{{ sponsor.email}}</li><br>
                           <li> le montant : {{ sponsor.montant }}DT </li> <br>
                           <li> Date de signature {{ sponsor.dateSignature.format('Y-m-d') }}</li></h5>
                        </ul>
                        <h4 class="card-title">Les événements de ce sponsor : </h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                <tr>

                                    <th>Titre L'événement</th>
                                    <th>Lieu</th>
                                    <th>Description</th>
                                    <th>Date de l'événement</th>
                                    <th>Nombre de participants</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for e in events %}
                                    <tr>

                                        <td>{{ e.titre }}</td>
                                        <td>{{ e.lieu }}</td>
                                        <td>{{ e.description }}</td>
                                        <td>{{ e.date.format('Y-m-d') }}</td>
                                        <td>{{ e.nbparticipants }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    $(document).ready(function() {
    var numEvents = $("table tbody tr").length;
    if (numEvents >= 5) {
    $("#gold").prop('hidden',false);
    }
    });
    </script>

{% endblock %}