{% extends "fixadmin.html.twig" %}
{% block content %}
    {{ form_start(form) }}
    <div class="container-fluid">
        <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Modifier un sondage
         <a href='{{path('app_sondage_index')}}' class="btn mb-1 btn-info float-right" style="margin-right: 20px"><i class="mdi mdi-plus"></i><span> Retour Ã  la liste principale</span></a>

        </h3></center>
        <div class="row justify-content-center">
            <div class="col-lg-12" style="margin-bottom: 50px">
                <div class="card" >
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide">
                                <div class="form-group row">

                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.sujet) }} <span class="text-danger">*</span>
                                    </label>

                                    <div class="col-lg-6">
                                        {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
                                         <small class="alert-danger">{{ form_errors(form.sujet) }}</small>

                                    </div>
                                </div>
                                <div class="form-group row">

                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.categorie) }} <span class="text-danger">*</span>
                                    </label>

                                    <div class="col-lg-6">
                                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                                   <small class="alert-danger">{{ form_errors(form.categorie) }}</small>

                                   
                                    </div>
                                </div>
                             

                               
                                {{ form_rest(form) }}
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
           
 
    {{ form_end(form) }}{% endblock %}
