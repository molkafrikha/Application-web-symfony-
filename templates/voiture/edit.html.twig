{% extends "fix.html.twig" %}

{% block content %}
    {{ form_start(form)  }}
    <div class="container-fluid" style="padding-top: 50px;">
        <div class="row justify-content-center">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valid" >
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.matricule) }} <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.matricule, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.puissance) }} <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.puissance, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" >{{ form_label(form.kilometrage) }}<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.kilometrage, { 'attr': {'class': 'form-control' }}) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-nombre-de-place">{{ form_label(form.nbplaces) }}<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.nbplaces, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-date-derniere-assurance">{{ form_label(form.dateAssurance) }} <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            {{ form_widget(form.dateAssurance, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}
                                            <span class="input-group-append"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-date-derniere-vidange"> {{ form_label(form.dateDVidange) }}<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            {{ form_widget(form.dateDVidange, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}

                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-color">{{ form_label(form.color) }} <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.color, { 'attr': {'class': 'colorpicker'} }) }}
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-puissance">{{ form_label(form.marque) }} <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.marque, { 'attr': {'class': 'form-control' } }) }}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}{% endblock %}
