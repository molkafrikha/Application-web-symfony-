{% extends "fix.html.twig" %}

{% block content %}
    {{ form_start(form,{'attr': {'novalidate': 'novalidate' ,  'action': path('app_voiture_new'), 'method': 'POST'}} ) }}
    <div class="container-fluid" style="padding-top: 50px;">
        <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Ajouter une voiture</h3> </center>
        <div class="row justify-content-center">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valid" >
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Matricule <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.matricule, { 'attr': {'class': 'form-control', 'placeholder': 'entrer la matricule'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.matricule) }}</small>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-puissance">Puissance <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.puissance, { 'attr': {'class': 'form-control', 'placeholder': 'entrer la puissance'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.puissance) }}</small>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-kilometrage">{{ form_label(form.kilometrage) }}<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.kilometrage, { 'attr': {'class': 'form-control', 'placeholder': 'entrer la Kilometrage'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.kilometrage) }}</small>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-nombre-de-place"> nombre de place <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.nbplaces, { 'attr': {'class': 'form-control', 'placeholder': 'entrer le nombre de place'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.nbplaces) }}</small>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-date-derniere-assurance">Date dernier assurance <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            {{ form_widget(form.dateAssurance, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}
                                            <small class="alert-danger">{{ form_errors(form.dateAssurance) }}</small>
                                            <span class="input-group-append"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-date-derniere-vidange"> Date derniere vidange<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            {{ form_widget(form.dateDVidange, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}
                                            <small class="alert-danger">{{ form_errors(form.dateDVidange) }}</small>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-color">couleur <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.color, { 'attr': {'class': 'colorpicker'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.color) }}</small>
                                    </div>
                                </div>



                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-puissance">Marque <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        {{ form_widget(form.marque, { 'attr': {'class': 'form-control' } }) }}
                                        <small class="alert-danger">{{ form_errors(form.marque) }}</small>
                                    </div>
                                </div>

                                


                                {{ form_rest(form) }}


                            </form>
                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">

                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock %}
