{% extends "fix.html.twig" %}

{% block content %}

    {{ form_start(form,{'attr': {'novalidate': 'novalidate' ,  'action': path('app_maintenance_new'), 'method': 'POST'}} ) }}
<div class="container-fluid" style="padding-top: 50px;">
    <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Ajouter une voiture</h3> </center>
    <div class="row justify-content-center">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        <form class="form-valid" >

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-matricule"> Matricule <span class="text-danger">*</span></label>
                                <div class="col-lg-6">
                                    {{ form_widget(form.idVoi, { 'attr': {'class': 'form-select'} }) }}
                                    <small class="alert-danger">{{ form_errors(form.idVoi) }}</small>
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-date-derniere-assurance">Date dernier assurance <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        {{ form_widget(form.dateDAssurance, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.dateDAssurance) }}</small>
                                        <span class="input-group-append"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-date-derniere-vidange"> Date derniere vidange<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        {{ form_widget(form.dateDVidange, { 'attr': {'class': 'form-control mydatepicker', 'placeholder': 'mm/dd/yyyy'} }) }}
                                        <small class="alert-danger">{{ form_errors(form.dateDVidange) }}</small>
                                    </div>
                                </div>
                            </div>



                            {{ form_rest(form) }}





                        </form>
                        <div class="form-group row">
                            <div class="col-lg-8 ml-auto">

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    {{ form_end(form) }}




{% endblock %}
